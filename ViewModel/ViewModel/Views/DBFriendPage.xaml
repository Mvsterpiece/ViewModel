<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewModel.Views.DBFriendPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nimi"></Label>
            <Entry Text="{Binding Name}"></Entry>
            <Label Text="Email"></Label>
            <Entry Text="{Binding Email}"></Entry>
            <Label Text="Telefon"></Label>
            <Entry Text="{ Binding Phone}"></Entry>
            <StackLayout>
                <Button Text="Salvesta" Clicked="SaveFriend"></Button>
                <Button Text="Kustuta" Clicked="DeleteFriend"></Button>
                <Button Text="Katkesta" Clicked="Cancel"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>